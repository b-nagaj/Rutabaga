{
  "extends": "stylelint-config-standard",
  "plugins": ["stylelint-order"],
  "rules": {
    "selector-class-pattern": [
      "^([a-z]+(-[a-z0-9]+)?)?(__[a-z]+(-[a-z0-9]+)?)?$",
      {
        "message": "Selector should follow BEM naming convention"
      }
    ],
    "selector-max-id": 0,
    "order/order": [
      "dollar-variables",
      "custom-properties",
      "declarations",
      "rules"
    ],
    "order/properties-alphabetical-order": true
  }
}
